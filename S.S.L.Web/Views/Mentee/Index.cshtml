@model MenteeDashboardViewModel

@{
    ViewBag.Title = "Dashboard";
    ViewBag.Heading = $"Hello {@User.Identity.Name}";
    ViewBag.SubHeading = "What would you like to do today?";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<!--Thought section-->
<div class="col-md-3 col-lg-2 mt-sm-4 ml-sm-4 mt-md-0 col-sm-9 mt-lg-0 ml-lg-0">
    <div class="bg-info p-3 shadow rounded-bottom">
        <p class="text-white lead"><em>Today's thoughts</em></p>
        <hr class="">
        <p class="text-white">We believe we are taking over and we act accordingly.</p>

    </div>
</div>

<div class="col-lg-8 col-md-8 mt-sm-4 mt-lg-0 ml-lg-0 mt-md-0 p-3 shadow bg-white rounded-bottom animated fadeIn">
    <div class="container-fluid">
        <div class="row">            

            <!--Todo section-->
            @{
                Html.RenderPartial("~/Views/Shared/_Todos.cshtml", Model.TodoModel);

            }
        </div>


    </div>
</div>

@section Scripts{
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/Scripts/app/custom.js"></script>

}

