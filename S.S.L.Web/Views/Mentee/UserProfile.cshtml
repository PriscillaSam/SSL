@model MenteeProfileViewModel
@{
    ViewBag.Title = "Profile";
    ViewBag.Heading = Model.Mentee.FullName;
    ViewBag.SubHeading = "Profile";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<div class="col-lg-8">
    <div class="row mt-4">
        @{
            Html.RenderPartial("_Profile", Model.Mentee);
        }
    </div>
    <div class="row animated slideInUp">
        <div class="col-lg-12 bg-white p-4 shadow">
            <div class="row shadow bg-white rounded p-3 mb-3">
                <h5 class="text-info mb-0">Mentor's Corner</h5>

            </div>
            @if (Model.Facilitator != null)
            {
                var f = Model.Facilitator;

                <div class="col-lg-4 offset-lg-4 shadow rounded-bottom">
                    <div class="row mb-2">
                        <div class="col-md-12">
                            <img src="~/Assets/img/login.jpg" alt="Mentor's profile picture" class="img-fluid" />

                        </div>
                    </div>
                    <div class="row p-1 bg-light mb-0">
                        <div class="col-md-2"><i class="fa fa-user fa-lg text-info"></i></div>
                        <div class="col-md-10"><p class="text-muted text-sm">@f.FullName</p></div>
                    </div>
                    <div class="row p-1 bg-light mb-0">
                        <div class="col-md-2"><i class="fa fa-envelope fa-lg text-info"></i></div>
                        <div class="col-md-10"><p class="text-sm text-capitalize"><a href="mailto:@f.Email" class="text-muted">@f.Email</a></p></div>
                    </div>
                    @if (f.MobileNumber != null)
                    {
                        <div class="row p-1 bg-light mb-0">
                            <div class="col-md-2"><i class="fa fa-map-marker fa-lg text-info"></i></div>
                            <div class="col-md-10"><p class="text-muted text-sm">@f.State, @f.Country</p></div>
                        </div>
                        <div class="row p-1 bg-light mb-0">
                            <div class="col-md-2"><i class="fa fa-phone fa-lg text-info"></i></div>
                            <div class="col-md-10"><p class="text-muted text-sm">@f.MobileNumber</p></div>
                        </div>
                    }
                    <div class="row p-1 bg-light mb-0">
                        <div class="col-md-2"><i class="fa fa-female fa-lg text-info"></i></div>
                        <div class="col-md-10"><p class="text-muted text-sm">@f.Gender</p></div>
                    </div>
                </div>
            }

            else
            {
                <div class="alert alert-light h-50 shadow">
                    <p class="text-center text-success">You have not been assigned a mentor yet.</p>
                </div>
            }
           

        </div>
    </div>

</div>
<div class="col-lg-2 col-md-2">

    <p class="ml-4">
        <a href="#" class="rounded-circle bg-dark p-4 shadow" data-target="#userModal" data-toggle="modal">
            <i class="fa fa-edit fa-lg text-gold"></i>
        </a>
    </p>

</div>


