<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - S.S.L</title>
    <link href="~/Content/bootstrap.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/animate.css" rel="stylesheet" />
    <link href="~/Assets/font-awesome/css/font-awesome.min.css" rel="stylesheet" />

    @*<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.0.13/css/all.css" integrity="sha384-DNOHZ68U8hZfKXOrtjWvjxusGo9WQnrNx2sqG0tfsghAvtVlRW3tvkXWZh58N9jp" crossorigin="anonymous">*@

    <script src="~/Scripts/modernizr-2.6.2.js"></script>
</head>
<body>

    <div class="container-fluid">
        <img src="~/Assets/img/03.jpg" alt="" class="backdrop d-md-block d-none img-responsive " width="100%" height="645">
        <div class="row">
            <div class="overlay">
                <div class="col-md-4 col-sm-10 col-lg-3 form-back offset-lg-9 offset-md-8 animated slideInRight">
                    <div class="form-nav mb-5">
                        <a href="@Url.Action("index","home")" title="Return to main page">
                            <img src="~/Assets/img/logo.png" alt="" class="img-responsive" width="150" height="100" style="margin-left:30%">

                        </a>
                    </div>
                    <div>
                        @{
                            Html.RenderPartial("_Alerts");
                        }
                        @RenderBody()

                    </div>
                    <div class="row mt-5">
                        <div class="col-md-12 form-footer">
                            <p class="text-muted text-center ">Copyright &copy; Sacred Secular League</p>
                        </div>
                    </div>

                </div>
            </div>

        </div>
    </div>
    <script src="~/Scripts/jquery-3.0.0.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    @RenderSection("scripts",false)
</body>
</html>
