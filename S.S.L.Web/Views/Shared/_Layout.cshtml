    <script>
        $(document).ready(function () {         
            var nav = $(".navbar")[0];
            var top = nav.offsetTop;        
         

            var navtoggle = $("#nav-toggler");
            $(".list-item").hover(function () {

                $(this).toggleClass("shadow swing");
            });

            $('.side-bar-toggle').click(function () {

                if ($('.side-nav').hasClass('show')) {
                    animate('.side-nav', 'slideOutLeft');
                    setTimeout(function () {
                        $(".overlay").addClass("hidden");

                        $('.side-nav').removeClass('show')
                    }, 500);
                }
                else {
                    
                    $(".overlay").removeClass("hidden");
                    animate('.side-nav', 'slideInLeft');
                    $('.side-nav').addClass('show');
                    return false;
                }
                setTimeout(function () {
                    $('.side-nav').removeClass('show')
                }, 1000);
            });

            //Animate function
            function animate(elem, animationStyle) {
                $(elem).addClass(animationStyle);
                var timeOut = setTimeout(function () {
                    $(elem).removeClass(animationStyle);
                }, 1000);

            }


            $("#aboutLink").click(function () {


                $("#banner-img").addClass("slideOutUp");
              
                setTimeout(function () {
                    $("#about").addClass("slideInUp");
                }, 1000);
            });
            $("#visionLink").click(function () {


                $("#banner-img").addClass("slideOutUp");
                $("#about").addClass("slideOutUp");
                setTimeout(function () {
                    $("#banner-img").addClass("hidden");
                    $("#about").addClass("hidden");

                }, 1000);
                setTimeout(function () {
                    $("#vision").addClass("slideInUp");
                    $("#vision").show();
                }, 1000);
            });

        });

    </script>
